{
  "name": "react-migration",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "overrides": {
    "@heroui/react": {
      "react": "^19.1.0",
      "react-dom": "^19.1.0"
    }
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "dev:debug": "vite --host 0.0.0.0 --port 3000 --debug",
    "build": "vite build",
    "build:with-tsc": "tsc -b && vite build",
    "build:production": "NODE_ENV=production tsc -b && vite build",
    "build:webcomponent": "tsc -b && vite build --config vite.config.webcomponent.ts",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "preview": "vite preview --host 0.0.0.0 --port 3000",
    "clean": "rm -rf dist node_modules/.vite",
    "fresh-install": "rm -rf node_modules package-lock.json && npm install",
    "docker:build": "docker build -t react-migration .",
    "docker:run": "docker run -p 3000:3000 react-migration",
    "docker:dev": "docker build -f Dockerfile.dev -t react-migration:dev . && docker run -p 3000:3000 -v $(pwd)/src:/app/src react-migration:dev",
    "tilt:up": "tilt up -f ../../../Tiltfile.react-migration",
    "tilt:down": "tilt down -f ../../../Tiltfile.react-migration",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@heroui/react": "^2.7.9",
    "@heroui/theme": "^2.4.16",
    "@heroui/toast": "^2.0.10",
    "@tailwindcss/postcss": "^4.1.8",
    "@tailwindcss/vite": "^4.1.8",
    "@tanstack/react-query": "^5.74.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@xstate/react": "^5.0.0",
    "axios": "^1.9.0",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.511.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.57.0",
    "react-hot-toast": "^2.5.2",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.6.1",
    "react-syntax-highlighter": "^15.6.1",
    "recharts": "^2.15.3",
    "xstate": "^5.19.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.52.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
